               </Button>
               <Button fx:id="btn_relatorio" onAction="#realotrios" prefHeight="50.0" styleClass="menu-btn" text="Relatorios">
                  <graphic>
                     <ImageView fx:id="reportIcon" fitHeight="16" fitWidth="16" styleClass="menu-icon" />
