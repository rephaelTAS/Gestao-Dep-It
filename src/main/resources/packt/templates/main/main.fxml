               </Button>
               <Button fx:id="btn_visualizar" onAction="#visualizar" prefHeight="50.0" styleClass="menu-btn" text="Visualizar">
                  <graphic>
                     <ImageView fx:id="viewIcon" fitHeight="16" fitWidth="16" styleClass="menu-icon" />
